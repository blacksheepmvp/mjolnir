<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Mjolnir.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@null</item>
        <item name="postSplashScreenTheme">@style/Theme.Mjolnir</item>
    </style>

    <style name="Theme.Mjolnir" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.Mjolnir.Transparent" parent="Theme.Mjolnir">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>